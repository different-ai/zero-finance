{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_PUBLIC_API_URL",
    "BLOB_READ_WRITE_TOKEN",
    "POSTGRES_URL",
    "POSTGRES_URL_NON_POOLING",
    "POSTGRES_URL_NO_SSL",
    "POSTGRES_PRISMA_URL",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_HOST",
    "POSTGRES_DATABASE",
    "OPENAI_API_KEY",
    "TENDERLY_API_KEY",
    "TENDERLY_ACCOUNT",
    "TENDERLY_PROJECT",
    "ETHERSCAN_API_KEY",
    "AUTH_SECRET",
    "XAI_API_KEY",
    "GROQ_API_KEY",
    "CLERK_SECRET_KEY",
    "PRIVY_APP_SECRET",
    "BASE_RPC_URL",
    "SIGNER_PRIVATE_KEY",
    "DEPLOYER_PRIVATE_KEY",
    "ALIGN_API_KEY",
    "ALIGN_API_BASE_URL",
    "CRON_SECRET_KEY",
    "LOGS_API_KEY",
    "ADMIN_SECRET_TOKEN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "out/**", "artifacts/**"]
    },

    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:lite": {
      "cache": false,
      "persistent": true
    },
    "build:lite": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "out/**", "artifacts/**"]
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "@rhinestone/module-template#build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["out/**", "artifacts/**", "cache/**"]
    },
    "@rhinestone/module-template#test": {
      "cache": true,
      "dependsOn": ["build"],
      "outputs": []
    },
    "@rhinestone/module-template#lint": {
      "cache": true,
      "outputs": []
    },
    "@rhinestone/module-template#clean": {
      "cache": false
    },
    "@zero-finance/simulator#build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    }
  }
}
