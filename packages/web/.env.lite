SKIP_ALIGN_FEATURES=true
SKIP_BANKING_FEATURES=true

# ============================================
# OPTIONAL: Development Tools
# ============================================
# Enable debug logging
# DEBUG=true

# Admin panel (generate a secure token for production)
ADMIN_SECRET_TOKEN=lite-mode-admin-token

# Cron jobs (for automated tasks)
CRON_SECRET=lite-mode-cron-secret

# ============================================
# NOTES FOR DEVELOPERS
# ============================================
# 1. Start the database: pnpm docker:lite:up
# 2. Run migrations: pnpm db:migrate:lite
# 3. Start the app: pnpm dev:lite
