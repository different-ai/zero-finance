{
  "$schema": "https://vercel.com/schemas/project.json",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet ./packages/web",
  "buildCommand": "pnpm build:vercel",
  "installCommand": "cd ../.. && pnpm install",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/auto-earn",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/process-gmail-sync",
      "schedule": "*/2 * * * *"
    },
    {
      "path": "/api/cron/kyc-notifications",
      "schedule": "*/10 * * * *"
    }
  ]
}
