{
  "buildCommand": "pnpm build:optimized",
  "installCommand": "pnpm install --frozen-lockfile --prefer-offline",
  "functions": {
    "app/api/*/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/cron/process-gmail-sync",
      "schedule": "*/2 * * * *"
    }
  ]
}
