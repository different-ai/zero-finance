{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa,get_code_context_exa,crawling_exa",
      "headers": {}
    },
    "notion": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.notion.com/mcp"],
      "enabled": true
    },
    "chrome": {
      "type": "local",
      "command": [
        "bash",
        "-c",
        "source ~/.nvm/nvm.sh && npx -y chrome-devtools-mcp@latest"
      ]
    }
  },
}
